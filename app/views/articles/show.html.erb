<h1 class="text-center mt-4"><%= @article.title %></h1>
<div class="container">
		<div class="row justify-content-md-center">
			<div class="col-8 mt-4">
				<div class="card text-center shadow mb-5 rounded">
				  <div class="card-header font-italic font-weight-bold">
				    by Ljubomir LukiÄ‡
				  </div>
				  <div class="card-body">
				    <div class="card-text mb-4 text-left"><%= simple_format(@article.description) %></div>
						<%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-sm btn-outline-info' %>
						<%= link_to 'Delete', article_path(@article), class: 'btn btn-sm btn-outline-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
				  </div>
				  <div class="card-footer text-muted">
				    <small>Created <%= time_ago_in_words(@article.created_at) %> ago,
						Edited <%= time_ago_in_words(@article.updated_at) %> ago </small>
				  </div>
				</div>
			</div>
		</div>
</div>
