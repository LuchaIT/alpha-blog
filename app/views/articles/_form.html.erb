<div class="container">
		<div class="row justify-content-center ">

		<div class="col-10">
			<%= render "shared/errors" %>
			<%= form_with(model: @article, class: "shadow-lg p-3 mb-2 bg-green rounded border border-success font-weight-bold", local: true) do |f| %>
				<div class="form-group row">
				    <%= f.label :title, class: "col-2 col-form-label text-light" %>
						<div class="col-10">
				    	<%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of artical" %>
						</div>
				</div>

			  <div class="form-group row">
					<%= f.label :description, class: "col-2 col-form-label text-light" %>
					<div class="col-10">
			    	<%= f.text_area :description, rows: 10, class: "form-control shadow rounded-lg", placeholder: "Description of artical" %>
					</div>
			  </div>

			  <div class="form-group row justify-content-center">
			    <%= f.submit "Save", class: "btn-home rounded-pill shadow" %>
			  </div>
			<% end %>
		</div>
		<div class="container row mb-3 justify-content-center text-dark";>
			<%= button_to 'Cancel', articles_path, class:"btn-home shadow", method: :get %>
		</div>
	</div>
</div>
