<div class="container">
		<div class="row justify-content-center ">

		<div class="col-10">
			<%= render "shared/errors" %>
			<%= form_with(model: @article, class: "shadow-lg p-3 mb-2 bg-green rounded border border-success", local: true) do |f| %>
				<div class="form-group row">
				    <%= f.label :title, class: "col-2 col-form-label text-light" %>
						<div class="col-10">
				    	<%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of artical" %>
						</div>
				</div>

			  <div class="form-group row">
					<%= f.label :description, class: "col-2 col-form-label text-light" %>
					<div class="col-10">
			    	<%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of artical" %>
					</div>
			  </div>

			  <div class="form-group row justify-content-center">
			    <%= f.submit "UpiÅ¡i", class: "btn btn-outline-light" %>
			  </div>
			<% end %>
		</div>

		<%= link_to '[Cancel & go to Articles page]', articles_path, class:"mb-2 text-info-ruby" %>
	</div>
</div>
