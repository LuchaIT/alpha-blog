<h1>Create a New Article</h1>

<% if @article.errors.any? %>
  <h3>Saveing ERRORS !!!</h3>
  <% @article.errors.full_messages.each do |msg|%>
    <ul>
      <li><%= msg %></li>
    </ul>
  <% end %>
<% end %>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
  <p>
    <%= f.label :title %>
    <br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <br/>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit "UpiÅ¡i" %>
  </p>

<% end %>

